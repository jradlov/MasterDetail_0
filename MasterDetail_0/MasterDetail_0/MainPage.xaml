             xmlns:local="clr-namespace:MasterDetail_0"
             x:Class="MasterDetail_0.MainPage">

    <MasterDetailPage.Master>
        <!-- Title is mandatory for theMasterDetailPage.Master content -->
        <ContentPage Padding="10" BackgroundColor="Azure" Title="Master">
            <ContentPage.Content>
                <StackLayout Margin="5,10,5,5">
                    <Label Text="Master Page" />
                    <Button Text="Menu Item 1" BackgroundColor="OliveDrab" Clicked="Button_Clicked1" />
                    <Button Text="Menu Item 2" BackgroundColor="OliveDrab" Clicked="Button_Clicked2" />
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>
        
    </MasterDetailPage.Master>

